<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gas Expenses - Driver Pay System</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
</head>
<body>
    <div class="dashboard">
        <header class="dashboard-header">
            <h1><i class="icon-fuel"></i> Gas Expenses</h1>
            <nav class="main-nav">
                <a href="/" class="nav-link"><i class="icon-home"></i> Home</a>
                <a href="/trips" class="nav-link"><i class="icon-road"></i> Trips</a>
                <a href="/gas" class="nav-link active"><i class="icon-fuel"></i> Gas</a>
            </nav>
        </header>

        <main class="dashboard-content">
            <section class="card">
                <div class="table-controls">
                    <div class="filter-group">
                        <label>Filter by Driver:</label>
                        <select id="driverFilter" class="filter-select">
                            <option value="">All Drivers</option>
                            <option value="Sophia">Sophia</option>
                            <option value="Marcus">Marcus</option>
                        </select>
                    </div>
                </div>

                <div class="scroll-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Driver</th>
                                <th>Amount</th>
                                <th>Location</th>
                                <th>Trip ID</th>
                                <th>Gallons</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% gasExpenses.forEach(expense => { %>
                                <tr>
                                    <td><%= helpers.formatDate(expense['Transaction Date (GMT)']) %></td>
                                    <td><%= expense['Driver Name'] || 'N/A' %></td>
                                    <td><%= helpers.formatCurrency(expense['Amount']) %></td>
                                    <td><%= expense['Merchant City'] %>, <%= expense['Merchant State'] %></td>
                                    <td><%= expense['Trip ID'] || 'N/A' %></td>
                                    <td><%= expense['Gallons']?.toFixed(2) || 'N/A' %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </section>
        </main>
    </div>
</body>
</html>